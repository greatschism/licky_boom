							<View class="hSIZE">
								<ImageView id="profileImage" />
								<Label id="name"></Label>
								<ImageView id="wireForBtnImg" />
								<Button id="profileSettingBtn" />
							</View>
						</TableViewRow>
						<TableViewRow id="lickyRow" class="foodRow">
